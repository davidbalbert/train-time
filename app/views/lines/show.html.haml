#wrapper
  .navigation
    %a{href: "/"} home
  %div{class: "line70-#{@line_num}"}
  %ul.line-wrapper
    %li.borough
      .sep
      .text bronx
      .sep
    - @stops.each do |stop|
      %li
        .line{class: "line-#{@line_num}"}
        = link_to stop_path(stop[:id], :from => @line_num) do
          .stop-marker{class: "line-#{@line_num}"}
            .stop-marker-center
        = link_to(stop_path(stop[:id], :from => @line_num), class: "stop-name") do
          != stop[:name].gsub(" - ", "<br>")
