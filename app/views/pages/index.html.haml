#wrapper
  %span.font20.home-headline Favorites
  %ul.favorites
    %li
      %a{href: "#link-to-this-station"}
        .line.line70-1
        .content
          .font30.favorites-headline 42nd St.
          %table.font20
            %tr
              %td uptown
              %td 3min
            %tr
              %td downtown
              %td 2min
    %li
      %a{href: "#link-to-this-station"}
        .line.line70-4
        .content
          .font30.favorites-headline Atlantic Ave<br>Barclays Center
          %table.font20
            %tr
              %td uptown
              %td 3min
            %tr
              %td downtown
              %td 2min
    %li
      %a{href: "#link-to-this-station"}
        .line.line70-S
        .content
          .font30.favorites-headline Times Square
          %table.font20
            %tr
              %td westbound
              %td 3min
            %tr
              %td eastbound
              %td 2min
